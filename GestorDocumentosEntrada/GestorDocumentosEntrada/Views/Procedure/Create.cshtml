@model GestorDocumentosEntrada.Models.Procedure

@{
    ViewBag.Title = "Create";
}

<div class="addProcedure">
    <div class="row col-md-12">
        <div class="col-md-3">
            <img class="headerImage" src="@Url.Content("~/Content/Image/escudo_66x81.png")">
        </div>
        <div class="col-md-9">
            <h4 class="headerTitle">Registrar Ingreso de Nuevo Documento</h4>
        </div>
    </div>
    <div class="row col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-md-12 form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="procedureDate">Fecha:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.procedureDate, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="department">Departamento:</label>
                    </div>
                    <div class="col-md-9">
                        <select name="department" class="form-control">
                            <option value="ALC" disabled selected=""></option>
                            <option value="ALC">Alcaldia</option>
                            <option value="RH">Recursos Humanos</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="code">Código:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.procedureCode, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="idType">Tipo de Cédula:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("StudentGender",
                    new SelectList(Enum.GetValues(typeof(GestorDocumentosEntrada.Models.Procedure.id_type))),
                    "Select Gender",
                    new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="personId">Cédula Solicitante:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.personId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="procedureType">Tipo de Trámite:</label>
                    </div>
                    <div class=" col-md-9">
                        <select name="procedureType" class="form-control">
                            <option value="" disabled selected=""></option>
                            <option value="1">Inquietud</option>
                            <option value="2">Solicitud</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="labelDiv col-md-3">
                        <label class="control-label" for="personId">Detalle del Trámite:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextArea("procedureDetail", null, new { @class = "form-control",@rows = "5",@cols = "30", @placeholder = "Ingrese una descripción del documento a registrar" })
                    </div>
                </div>
                <div class="buttonDiv form-group">
                    <div class="col-md-3">
                        <button type="button" class="backButton btn" aria-label="Left Align" onclick="location.href='platformMenu.html'">
                            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-9">
                        <button type="submit" class="sendButton">Submit</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>