<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sofia.gestorentradadocumentos.enterProcedure">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Formulario de Ingreso "
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fecha"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView"
            android:layout_marginTop="37dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtDate"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_toLeftOf="@+id/btnChangeDate"
            android:layout_toStartOf="@+id/btnChangeDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Departamento"
            android:id="@+id/textView7"
            android:layout_below="@+id/txtDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerDepartment"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/spinnerType"
            android:layout_alignStart="@+id/spinnerType" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tipo de Identificaci칩n"
            android:id="@+id/textView9"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/spinnerDepartment"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerType"
            android:layout_below="@+id/textView9"
            android:layout_alignRight="@+id/txtID"
            android:layout_alignEnd="@+id/txtID"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Identificaci칩n"
            android:id="@+id/textView10"
            android:layout_below="@+id/spinnerType"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"
            android:layout_marginTop="37dp" />

        <com.github.pinball83.maskededittext.MaskedEditText
            android:id="@+id/txtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/spinnerProcedure"
            android:layout_alignEnd="@+id/spinnerProcedure"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tipo de Tr치mite"
            android:id="@+id/textView11"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/txtID"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerProcedure"
            android:layout_below="@+id/textView11"
            android:layout_alignRight="@+id/btnChangeDate"
            android:layout_alignEnd="@+id/btnChangeDate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Tr치mite"
            android:id="@+id/textView12"
            android:layout_below="@+id/spinnerProcedure"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginTop="31dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtDetail"
            android:layout_below="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/space"
            android:layout_alignEnd="@+id/space"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/space"
            android:layout_below="@+id/txtDetail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btnRegister"
            android:layout_alignBottom="@+id/space"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="#65826E"
            android:textColor="#EBDC07"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Fecha"
            android:id="@+id/btnChangeDate"
            android:layout_alignBottom="@+id/txtDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtcode"
            android:layout_alignTop="@+id/space"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/space"
            android:layout_alignEnd="@+id/space"/>


    </RelativeLayout>
</ScrollView>

