<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofia.gestorentradadocumentos.Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/txtConnectionProcedure" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bienvenido"
            android:id="@+id/txtWelcome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/escudo"
            android:layout_below="@id/txtWelcome"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Municipalidad de Alajuelita"
            android:id="@+id/idTitle"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gestor de Entrada de Documentos"
            android:id="@+id/textView2"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/idTitle"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Menú Principal"
            android:id="@+id/textView5"
            android:layout_marginTop="33dp"
            android:layout_centerHorizontal="true"
            android:textColor="#679868"
            android:layout_below="@id/textView2"
            android:layout_margin="20dp"/>

        <Button
            android:layout_width="245dp"
            android:layout_height="46dp"
            android:text="Ingresar Trámite"
            android:id="@+id/btnEnter"
            android:background="#65826E"
            android:textColor="#EBDC07"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/btnSearchDate"
            android:layout_alignStart="@+id/btnSearchDate" />

        <Button
            android:layout_width="245dp"
            android:layout_height="46dp"
            android:text="Buscar Oficio"
            android:id="@+id/btnSearchDate"
            android:background="#65826E"
            android:textColor="#EBDC07"
            android:layout_below="@+id/btnEnter"
            android:layout_centerHorizontal="true"
            android:layout_margin="45dp"/>

        <Button
            android:layout_width="245dp"
            android:layout_height="46dp"
            android:text="Salir"
            android:id="@+id/btnExit"
            android:background="#65826E"
            android:textColor="#EBDC07"
            android:layout_below="@+id/btnSearchDate"
            android:layout_alignLeft="@+id/btnSearchDate"
            android:layout_alignStart="@+id/btnSearchDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtwelcome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>



    </RelativeLayout>






</ScrollView>

