<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofia.gestorentradadocumentos.Menu">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/escudo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Municipalidad de Alajuelita"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menú Principal"
        android:id="@+id/textView5"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#679868"/>

    <Button
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:text="Ingresar Trámite"
        android:id="@+id/btnEnter"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnSearch"
        android:layout_alignEnd="@+id/btnSearch"
        android:background="#65826E"
        android:textColor="#EBDC07"/>

    <Button
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:text="Buscar Oficio"
        android:id="@+id/btnSearch"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/btnEnter"
        android:layout_centerHorizontal="true"
        android:background="#65826E"
        android:textColor="#EBDC07"/>

    <Button
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:text="Salir"
        android:id="@+id/btnExit"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btnSearch"
        android:layout_alignLeft="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch"
        android:background="#65826E"
        android:textColor="#EBDC07"/>

</RelativeLayout>
